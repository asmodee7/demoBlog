{% extends "base.html.twig" %}

{% block title %}MonBlog Symfony | Identifiez-vous
{% endblock %}

{% block body %}

	<h1 class="display-4 text-center my-4">Identifiez-vous</h1>

    {% if error %}
        <p class="bg-danger text-white text-center p-3 col-md-4 mx-auto rounded"> {{ error.messageKey |trans(error.messageData, 'security') }} </p>
    {% endif %}

	<form class="mx-auto col-md-5" method="post" action="{{ path('security_login') }}" >
		<div class="from-groupe">
			<label for="_username"></label>
			<input type="text" class="form-control" id="_username" name="_username" placeholder="Pseudo" value"{{ last_username }}">
		</div>
		<div class="from-groupe">
			<label for="_password"></label>
			<input type="password" class="form-control" id="_password" name="_password" placeholder="Mot de passe">
		</div>
        <br>
		<input type="submit" class="btn btn-dark text-center mx-auto col-md-12" value="Connexion">


	</form>
{% endblock %}
